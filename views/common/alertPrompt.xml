<Alloy>
	<Window id="alertPromptWin" width="100%" height="100%" backgroundColor="#CC000000" >
		<View layout="vertical" class="container" height="Ti.UI.SIZE" width="50%" borderRadius="10" backgroundColor="white">
			<Label id="titleLabel" class="fontBold24" top="10" />
			
			<View class="separator" top="10" />
			
			<Label id="messageLabel" class="fontLight22" top="10" left="25" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" right="25" wordWrap="true" />
			
			<View class="separator" top="10" />
			
			<View id="buttonContainer" height="50" width="100%">
				<Button id="okButton" class="fontLight18" onClick="onOk" width="40%" title="OK"/>
				<View id="vertSep" class="verticalSeparator"/>
				<Button id="cancelButton" class="fontLight18" onClick="onCancel" width="40%" title="Cancel" />
			</View>
		</View>
	</Window>
</Alloy>