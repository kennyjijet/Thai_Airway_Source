								<Label id="infant" top="-2" class="labelShow2" ></Label>
							</View>
							<View id="thirdViewId" top="5" layout="horizontal" height="20" >
								<Label id="flightId" class="labelShow3" width="50">Flight:</Label>
								<Label id="conFlight" class="labelShow4" width="80"></Label>
								<Label id="dateId" class="labelShow3" width="45">Date:</Label>
								<Label id="conDate" class="labelShow4" width="73">C</Label>
								<Label id="segmentId" class="labelShow3" width="75">Segment:</Label>
								<Label id="conSegment" class="labelShow4" width="92"></Label>
								<Label id="stdId" class="labelShow3" width="40">STD:</Label>
								<Label id="conSTD" class="labelShow4" ></Label>
							</View>
						</View>
				</View>
				<View backgroundImage="images/ic_staff.png" zIndex="100" id="staff" right="0" top="5" height="25" width="55" visible="false">
					
				</View>
			</TableViewRow>
</Alloy>