<Alloy>
			<TableViewRow hasChild="true" backgroundColor="transparent" selectedBackgroundColor= "33ffffff" height ="Ti.UI.SIZE" id="tableRow">
				<View id="viewId" layout="horizontal" backgroundColor="transparent" height="Ti.UI.SIZE">
						<ImageView image="" height="50" width="80" left="2%" id="image"></ImageView>
						<Label id="seat" height="50">35G</Label>
						<View id="viewDetail" layout="vertical" height="Ti.UI.SIZE" bottom="5">
							<Label  id="name" class="labelShow2" left="0" top="10" height="30" width="100%">LastName FirstNamexxxxxxxxx</Label>
							<View id="subViewId" top="5" layout="horizontal" height="20" >
								<Label id="labelRop" class="labelShow" width="50">ROP :</Label>
								<Label id="rop" class="labelShow2" width="110"></Label>
								<Label id="classP" class="labelShow" width="60">Class : </Label>
