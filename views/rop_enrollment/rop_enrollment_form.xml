                                <Label left="3%" width="92%" height="100%" class="fontBold18" color="white">Condition for Enrollment : </Label>
                                <ImageView id="typeHasChildArrowDown" image = "/images/arrow_down.png" width="15" height="15"></ImageView>
                            </View>
                            <View id="enrollConditionLabelView" layout="horizontal" height="70%" width="100%" backgroundColor="transparent">
