<Alloy>
    <Window id="upgradeSeatPaymentWindow" backgroundImage="/images/bg_general.png" layout = "vertical" title="Upgrade Seat Payment" height="100%" width = "100%">
            <View layout="vertical" height="100%" width = "100%">
                <View  height="16%" width="100%" backgroundImage="/images/bg_rop.png" layout="vertical">
                     <View id="currentSeatDetailView" layout="horizontal" height="50%">
                        <Label id="currentSeat" class = "fontLight18" color="white" height="100%" left="3%" width="140">Current Seat :</Label>
                        <Label id="currentSeatLabel" class = "fontLargeBold" height="100%" left="3%" width="75%" color="#FFCB05">30A</Label>
                    </View>
                    <View id="newSeatDetailView" layout="horizontal" height="50%">
                        <Label class = "fontLight18" color="white" height="100%" left="3%" width="140">New Seat :</Label>
                        <Label id="newSeatLabel" class = "fontLargeBold" height="100%" left="3%" width="75%" color="#FFCB05">40A</Label>
                    </View>   
                </View>
                <View id="selectBodyView" layout="vertical" height="80%" width = "100%">
                    <View id="paymentTypeView" layout="horizontal" height="15%" width="100%" backgroundColor="transparent" backgroundImage="/images/bg_header_section.png">
                        <Label class = "fontLight18" color="white" height="100%" left="3%" width="140">Payment Type :</Label>
                        <Label class = "fontLargeBold" height="100%" left="0" width="10" color="#FF9F33">*</Label>
                        <Label id="paymentTypeLabel" class = "fontLargeBold" height="100%" left="3%" width="70%" color="#FFCB05">Mileage</Label>
                        <ImageView image = "/images/arrow_down.png" left="-18" width="15" height="15"></ImageView>
                    </View>
                    <View layout="horizontal" height="15%" width="100%" backgroundColor="transparent" backgroundImage="/images/bg_header_section.png">
                        <Label class = "fontLight18" color="white" height="100%" left="3%" width="140">Amount :</Label>
                        <Label class = "fontLargeBold" height="100%" left="0" width="10" color="#FF9F33">*</Label>
                        <TextField id="amountTextField" class = "fontLargeBold" hintText="0.00" maxLength="150" hintTextColor="#7B549C" paddingLeft="15" paddingRight="15" borderRadius="5" borderWidth="1" borderColor="#7B549C" color="#FFCB05" top="25%" bottom="25%" left="1%" width="40%" backgroundColor="#26000000" color="#FFCB05" verticalAlign="Titanium.UI.TEXT_VERTICAL_ALIGNMENT_CENTER" textAlign="Titanium.UI.TEXT_ALIGNMENT_LEFT" ></TextField>
                        <Label id="paymentUnitLabel" class = "fontLargeBold" height="100%" left="3%" width="30%" color="#FFCB05">Select Currency</Label>
                        <ImageView id="paymentUnitArrowRight" image = "/images/ic_arrow_right.png" left="-20" width="15" height="15"></ImageView>
                    </View>
                    <View id="attachmentView1" layout="vertical" height="15%" backgroundImage="/images/bg_header_section.png">
                        <View layout="horizontal" height="100%" width="100%" backgroundColor="transparent">
                            <Label class = "fontLight18" left="3%" height="100%" width="140" color="white">Boarding Pass : </Label> -->                        
                            <Label class = "fontLargeBold" height="22" left="0" width="10" color="#FF9F33">*</Label>
                            <ImageView id ="cameraBtn1" backgroundImage="/images/btn_camera4.png" left="1%" height="70" width="70" borderRadius="10" borderColor="white" borderWidth="1"></ImageView>
                            <TextArea id="attachmentTextField1" class = "fontBold18" suppressReturn = "false" borderRadius="5" borderWidth="2" borderColor="#7B549C" color="#FFCB05" top="15%" bottom="15%" left="3%" width="61%" backgroundColor="#26000000" color="#FFCB05" verticalAlign="Titanium.UI.TEXT_VERTICAL_ALIGNMENT_TOP" textAlign="Titanium.UI.TEXT_ALIGNMENT_LEFT" ></TextArea>                        
                        </View>
                    </View>
                    <View layout="vertical" height="25%" width="100%" backgroundColor="transparent">
                        <Label class = "fontLight18" color="white" height="22" left="3%" top="15%" width="140">Detail :</Label>
                        <TextArea id="detailTextArea" class = "fontBold18" hintText="Detail..." hintTextColor="#A6A6A5" paddingLeft="15" paddingRight="15" borderRadius="5" borderWidth="1" borderColor="#7B549C" color="#FFCB05" top="5%" bottom="5%" left="3%" right="3%" backgroundColor="#26000000" color="#FFCB05" verticalAlign="Titanium.UI.TEXT_VERTICAL_ALIGNMENT_TOP" textAlign="Titanium.UI.TEXT_ALIGNMENT_LEFT" ></TextArea>
                    </View>
                    <View layout="horizontal" height="34%" width="100%" backgroundColor="transparent">
                        <View layout="vertical" height="100%" width="50%" backgroundColor="transparent">
                            <ImageView id="confirmBtn" image = "/images/btn_confirm.png" top="30%" width = "150" height = "50"></ImageView>
                        </View>
                        <View layout="vertical" height="100%" width="50%" backgroundColor="transparent">
                            <ImageView id="cancelBtn" image = "/images/btn_cancel_new.png" top="30%" width = "150" height = "50"></ImageView>
                        </View>
                    </View>
                </View>
            </View>
    </Window>
</Alloy> 