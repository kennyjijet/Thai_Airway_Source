<Alloy>
    <Window id="upgradeSeatDetailWindow" layout = "vertical" title="Upgrade Seat" height="100%" width = "100%">
            <ScrollView layout="vertical" height="100%" width = "100%" Sc>
                <View id="seatDetailView" backgroundImage="/images/bg_rop.png" layout="vertical" height="17%" width = "100%">
                    <Label id="seatClassLabel" class = "fontLargeBold" height="22" top="33%" color="#FFCB05">Seat No. 37A - Class Y</Label>                
                    <Label id="floorZoneLabel" class = "fontLargeBold" height="22" top="5%" color="#FFCB05">Main Deck - Zone 1</Label>                
                </View>
                <View id="selectBodyView" layout="vertical" height="83%" width = "100%">
                    <Label id="passengerNamelabel" class = "fontLargeBold" height="22" top="5%" color="#FFCB05">Passenger Name</Label>
                    <ImageView id="seatIcon" image = "/images/ic_upgrade_seat.png" top = "3%" width = "Ti.UI.SIZE" height = "33%" ></ImageView>
                    <View id="changeFromView" layout="horizontal" height="22" width="100%" top="5%">
                        <View layout="vertical" height="100%" width="50%">
                            <Label id="changeDetailTitleFromLabel" class = "fontNormalHBold" right="5" height="100%" color="white">Old Seat No. Class to  New Seat No. Class</Label>                                        
                        </View>                
                        <View layout="vertical" height="100%" width="50%">
                            <Label id="changeDetailValueFromLabel" class = "fontLargeBold" left="5" height="100%" color="#FFCB05">Old Seat No. Class to  New Seat No. Class</Label>                                        
                        </View>                
                    </View>                
                    <View id="changeFromViewId" layout="horizontal" height="22" width="100%" top="3%">
                        <View layout="vertical" height="100%" width="50%">
                            <Label id="changeDetailTitleToLabel" class = "fontNormalHBold" right="5" height="100%" color="white">Old Seat No. Class to  New Seat No. Class</Label>                                        
                        </View>                
                        <View layout="vertical" height="100%" width="50%">
                            <Label id="changeDetailValueToLabel" class = "fontLargeBold" left="5" height="100%" color="#FFCB05">Old Seat No. Class to  New Seat No. Class</Label>                                        
                        </View>                
                    </View>                
                    <View id="changeToViewId" layout="horizontal" height="22" width="100%" top="3%">
                        <View layout="vertical" height="100%" width="50%">
                            <Label id="amountTitleLabel" class = "fontNormalHBold" right="5" height="100%" color="white">Need to use : </Label>                                        
                        </View>                
                        <View layout="vertical" height="100%" width="50%">
                            <Label id="amountLabel" class = "fontLargeBold" left="5" height="100%" color="#FFCB05">10,000 Miles</Label>                
                        </View>                
                    </View>                
                    <View id="reasonForChangeView" layout="vertical" height="0" width="100%" backgroundColor="transparent">
                        <View layout="horizontal" height="22" width="100%" backgroundColor="transparent">
                            <Label class = "fontLight18" color="white" height="21" left="15%" width="170">Reason for change :</Label>
                            <Label class = "fontLargeBold" height="100%" left="0" width="10" color="#FF9F33">*</Label>
                        </View>
                        <TextArea id="reasonForChangeTextArea" class = "fontBold18" hintText="Detail..." hintTextColor="#A6A6A5" paddingLeft="15" paddingRight="15" borderRadius="5" borderWidth="1" borderColor="#7B549C" color="#FFCB05" top="5%" bottom="1%" left="15%" width="70%" backgroundColor="#26000000" color="#FFCB05" verticalAlign="Titanium.UI.TEXT_VERTICAL_ALIGNMENT_TOP" textAlign="Titanium.UI.TEXT_ALIGNMENT_LEFT" ></TextArea>
                    </View>
                    <ImageView id="paymentBtn" image = "/images/btn_payment.png" top = "5%" width = "150" height = "0"></ImageView>
                    <View id="confirmSectionView" layout="horizontal" height="0" width="100%" backgroundColor="transparent">
                        <View layout="vertical" height="100%" width="50%" backgroundColor="transparent">
                            <ImageView id="confirmBtn" image = "/images/btn_confirm.png" top="20%" width = "150" height = "50"></ImageView>
                        </View>
                        <View layout="vertical" height="100%" width="50%" backgroundColor="transparent">
                            <ImageView id="cancelBtn" image = "/images/btn_cancel_new.png" top="20%" width = "150" height = "50"></ImageView>
                        </View>
                    </View>
                </View>
            </ScrollView>
    </Window>
</Alloy> 